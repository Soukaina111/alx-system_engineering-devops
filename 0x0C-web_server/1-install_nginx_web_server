#!/usr/bin/env bash
# This script Install Nginx web server

apt-get update
apt-get install -y nginx
cat >/etc/nginx/sites-available/default <<EOL
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html index.htm;
    server_name _;
    location / {
        try_files \$uri \$uri/ =404;
        echo "Hello World!";
    }
}
EOL
service nginx start
